<div class="padre">

{{#with data}}
  <h1><i class="fas fa-film"></i> {{original_title}}</h1>
  <div>
 {{#if poster_path}}
    <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="poster-img" width="200">
      {{else}}
    <img src="/images/default-movie.png" alt="poster-img" width="200">
  {{/if}}   
</div>


<p class="overview">{{overview}}</p>

<div class="list">
{{#each genres}}
  <p>| {{this.name}} |</p>
{{/each}}
</div>


<div class="all-content">
<p>Original Lenguage: {{original_language}}</p>
<p>Popularity: {{popularity}}</p>
<p>Runtime: {{runtime}}</p>
<p>Rating Average: {{vote_average}}</p>
<p>Votes: {{vote_count}}</p>
</div>

</div>

<div class="botones-list">
<form action="/list/add/watched/{{id}}" method="POST">
  <div>
  <button type="submit" class="btn btn-info btn-lg">Add to Watchedlist</button>
  </div>
</form>
<form action="/list/add/watchlist/{{id}}" method="POST">
<div>
  <button type="submit" class="btn btn-info btn-lg second-b">Add to Watchlist</button>
</div>
</form>
</div>
{{/with}}
