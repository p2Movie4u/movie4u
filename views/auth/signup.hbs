<!-- views/auth/signup.hbs -->
<div class="sign">
  <h2>Signup</h2>
</div>
<form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <div class="form-group">
    
    <input id="username" type="text" class="form-control" name="username" placeholder="Your username">
  </div>

  <div class="form-group">
   
    <input id="password" type="password" class="form-control" name="password" placeholder="Your password">
  </div>
  <div class="form-group">
    
    <input id="email" type="email" class="form-control" name="email" placeholder="Your email">
  </div>
  <div class="form-group photo">
    <label for="photo">Upload you profile photo</label>
    <br>
    <input id="photo" type="file" class="btn btn-light" name="photo"></span>

  </div>
  {{#if message }}
  <div class="error-message">{{ message }}</div>
  {{/if}}

  <br>
  <br>

  <button class="sign-bot">Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>